@using TravelTripProje.Models.Sınıflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>YorumListesi</h2>

<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı Adı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        
        
    </tr>

    @foreach (var x in Model)
    {
<tr>
    <th>@x.ID</th>
    <td>@x.KullaniciAdi</td>
    <td>@x.Mail</td>
    <td>@x.Yorum</td>
    <td>@x.Blog.Baslik</td>
    <td><a href="/Admin/YorumSil/@x.ID" class="btn btn-danger">Sil</a></td>
    
</tr>
    }

</table>
<a href="/Admin/YeniBlog " class="btn btn-info">Yeni Blog Ekle</a>

